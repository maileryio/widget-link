{
    "name": "maileryio/yii-widget-link",
    "type": "library",
    "description": "Yii Widget Link",
    "keywords": [
        "yii",
        "widget"
    ],
    "homepage": "https://github.com/maileryio/yii-widget-link",
    "license": "BSD-3-Clause",
    "support": {
        "source": "https://github.com/maileryio/yii-widget-link",
        "issues": "https://github.com/maileryio/yii-widget-link/issues",
        "wiki": "https://github.com/maileryio/yii-widget-link/wiki"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4",
        "foxy/foxy": "^1.0",
        "yiisoft/assets": "^1.0@dev",
        "yiisoft/html": "^3.0@dev",
        "yiisoft/widget": "^3.0@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phan/phan": "^2.4",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "autoload": {
        "psr-4": {
            "Mailery\\Widget\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mailery\\Widget\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix --diff --dry-run",
        "fix": "php-cs-fixer fix",
        "phan": "phan --progress-bar -o analysis.txt"
    },
    "config": {
        "sort-packages": true
    }
}
